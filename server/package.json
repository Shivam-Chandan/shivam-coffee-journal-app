{
  "name": "shivam-coffee-journal-backend",
  "version": "1.0.0",
  "description": "Backend API for the Coffee Journal using Express and Google Cloud Firestore.",
  "type": "module",
  "main": "app.ts",
  "scripts": {
  "dev": "tsx server/index.ts",
  "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
  "start": "NODE_ENV=production node dist/index.js",
  "check": "tsc"
},
  "dependencies": {
    "@shared/schema": "*",
    "express": "^4.21.2",
    "firebase-admin": "^12.0.0",
    "dotenv": "^16.1.4"
  }
}
